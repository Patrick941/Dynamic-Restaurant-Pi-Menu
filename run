import time
import os

# Set the trigger for the activity LED to "none" to gain control
with open("/sys/class/leds/led0/trigger", "w") as trigger_file:
    trigger_file.write("none")

# Function to blink the activity LED
def blink_led(interval=0.5):
    try:
        while True:
            # Turn the LED on
            with open("/sys/class/leds/led0/brightness", "w") as led_file:
                led_file.write("1")
            time.sleep(interval)

            # Turn the LED off
            with open("/sys/class/leds/led0/brightness", "w") as led_file:
                led_file.write("0")
            time.sleep(interval)
    except KeyboardInterrupt:
        # Reset the trigger to its default when interrupted
        with open("/sys/class/leds/led0/trigger", "w") as trigger_file:
            trigger_file.write("mmc0")  # Default trigger for activity LED

# Blink with a 0.5-second interval
blink_led(0.5)
